<form asp-controller="Contact" asp-action="Create">
	<div>
		<label for="Name"></label>
		<input type="text" name="Name" />
	</div>
	<div>
		<label for="Phone"></label>
		<input type="text" name="Phone" />
	</div>
	<div>
		<label for="Email"></label>
		<input type="text" name="Email" />
	</div>
	<div>
		<label for="HasWhatsAppAccount"></label>
		<input type="checkbox" name="HasWhatsAppAccount" />
	</div>
	<div>
		<label for="HasTelegramAccount"></label>
		<input type="checkbox" name="HasTelegramAccount" />
	</div>
	<div>
		<label for="Notes"></label>
		<input type="text" name="Notes" />
	</div>
</form>